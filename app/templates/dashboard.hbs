<div class="flex h-screen overflow-hidden bg-gray-100">
    <div class="hidden md:flex md:flex-shrink-0">
        <div class="flex flex-col w-64">
            <div class="flex flex-col flex-1 h-0 bg-white border-r border-gray-200">
                <div class="flex flex-col flex-1 pt-5 pb-4 overflow-y-auto">
                    <div class="flex items-center flex-shrink-0 px-4">
                        App
                    </div>
                    <nav id="main-nav" class="flex-1 px-2 mt-5 space-y-1 bg-white">
                        <LinkTo @route="dashboard"
                            class="flex items-center px-2 py-2 text-sm font-medium leading-5 text-gray-900 no-underline transition duration-150 ease-in-out bg-white rounded-md group hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:bg-gray-200"
                        >
                            <FaIcon @icon="home" class="mr-1" />
                            <span>Dashboard</span>
                        </LinkTo>

                        <a href="#"
                            class="flex items-center px-2 py-2 text-sm font-medium leading-5 text-gray-900 no-underline transition duration-150 ease-in-out bg-white rounded-md group hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:bg-gray-200"
                            {{on "click" (fn this.logout)}}
                        >
                            <FaIcon @icon="power-off" class="mr-1" />
                            <span>Logout</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="flex flex-col flex-1 w-0 overflow-hidden">
        <main class="relative z-0 flex-1 overflow-y-auto focus:outline-none" tabindex="0">
            <div class="pt-2 pb-6 md:py-6">
                <div class="px-4 mx-auto max-w-7xl sm:px-6 md:px-8">
                    <h1 class="text-2xl font-semibold text-gray-900">
                        {{this.welcomeMessage}}
                    </h1>
                </div>
                <div class="px-4 mx-auto max-w-7xl sm:px-6 md:px-8">
                    {{outlet}}
                </div>
            </div>
        </main>
    </div>
</div>